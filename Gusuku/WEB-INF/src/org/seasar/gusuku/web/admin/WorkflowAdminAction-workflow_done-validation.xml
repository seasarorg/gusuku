<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.dtd">
<validators>
	<field name="name">
		<field-validator type="requiredstring">
			<message key="workflow.name.required"/>
		</field-validator>
	</field>
	<field name="startstatusid">
		<field-validator type="required">
			<message key="workflow.startstatusid.required"/>
		</field-validator>
	</field>
	<field name="endstatusid">
		<field-validator type="required">
			<message key="workflow.endstatusid.required"/>
		</field-validator>
	</field>
</validators>