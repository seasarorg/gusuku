<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.dtd">
<validators>
	<field name="mailaddr">
		<field-validator type="requiredstring">
			<message key="account.mailaddr.required"/>
		</field-validator>
	</field>
	<field name="password">
		<field-validator type="requiredstring">
			<message key="account.password.required"/>
		</field-validator>
	</field>
	<field name="name">
		<field-validator type="requiredstring">
			<message key="account.name.required"/>
		</field-validator>
	</field>
	<field name="kind">
		<field-validator type="requiredstring">
			<message key="account.kind.required"/>
		</field-validator>
	</field>
</validators>