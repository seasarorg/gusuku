<?xml version="1.0" encoding="UTF-8"?>
<m:mayaa xmlns:m="http://mayaa.seasar.org">
	<m:doRender m:id="textareaTag" >
	<m:with>
		<m:element name="textarea">
			<m:attribute name="name" value="${binding.nameValue}" />
			<m:attribute name="rows" value="${binding.rows}" />
			<m:attribute name="cols" value="${binding.cols}" />
			<m:write name="value" value="${binding.value}" escapeEol="false"/>
		</m:element>
	</m:with>
	</m:doRender>

</m:mayaa>